public class AutorServicio {
	
	@Autowired
	private AutorServicio autorServicio;
	
	public void crearAutor(String nombre) throws ErrorServicio{
		if (nombre == null || nombre.isBlank()) {
			throw new ErrorServicio("Nombre inv√°lido");
		}
	}
}
